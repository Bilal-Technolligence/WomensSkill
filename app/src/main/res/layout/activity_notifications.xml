                    android:layout_marginTop="2dp"
                    android:text="10w ago"
                    android:gravity="fill_vertical"
                    android:textSize="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/notification_datetime"
                    />
            </LinearLayout>
        </LinearLayout>
