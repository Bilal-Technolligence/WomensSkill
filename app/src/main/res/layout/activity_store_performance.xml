<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".StorePerformanceActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="fill_vertical"
                    android:text="Performance "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="fill_vertical"
                    android:text="Revenue "
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:layout_marginTop="10dp"
                    android:text="Last 30 Days "
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/middle_layout"
                    android:layout_height="200dp"
                    android:id="@+id/bargraph"
                    tools:ignore="MissingClass"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSelRingtone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:text="Order"/>
                    <TextView
                        android:id="@+id/tvRingtone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:layout_centerInParent="true"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Rating"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="7dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Shipped on Time"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtShippedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="100.0%"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ve Seller Rating"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtPositiveRate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="100.0%"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="7dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Cancellation Rate"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtCanceRate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="0.0%"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Product Rating"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtProductRating"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="5.0%"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="7dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Return Rate"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtReturnRate"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="--"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Response Rate"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtResponseRate"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="7dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text=""
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txtOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Response Time (min)"
                        android:gravity="fill_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"/>
</RelativeLayout>